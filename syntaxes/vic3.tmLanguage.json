				{ "include": "#triggers" },
				{ "include": "#event_targets" },
				{ "include": "#scopes" }
			]
		},
		"L:meta.id.paradox.non-comparable.non-prefixed": {
			"patterns": [
				{ "include": "#parameters-lhs"}
			]
